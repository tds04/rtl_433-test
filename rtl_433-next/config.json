{
  "name": "rtl_433 (next)",
  "image": "ghcr.io/pbkhrv/rtl_433-hass-addons-rtl_433-next-{arch}",
  "version": "next",
  "slug": "rtl433-next",
  "description": "Receive wireless sensor data via an SDR dongle and rtl_433",
  "url": "https://github.com/pbkhrv/rtl_433-hass-addons/tree/main/rtl_433-next",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["config:rw"],
  "services": ["mqtt:want"],
  "usb": true,
  "udev": true,
  "options": {
    "device": 0,
    "gain": 0,
    "frequency": "433.92M",
    "frequency_hop": ["433.92M", "915M"],
    "hop_interval": 60,
    "sample_rate": "1024k",
    "convert_si": true,
    "protocols": [10, 11, 40, 41, 55, 72, 73, 74, 149, 154, 160, 161, 163, 197, 228],
    "pulse_detect": {
      "auto_level": true
    },
    "mqtt": {
      "host": "192.168.1.9",
      "port": 1883,
      "user": "mqtt",
      "password": "Citrix.1981",
      "retain": true,
      "topic_prefix": "rtl_433/9b13b3f4-rtl433"
    },
    "output": {
      "json_file": "/config/rtl_433/logs/output.json",
      "kv": true
    },
    "log_level": 6,
    "report_meta": true,
    "report_protocol": true
  },
  "schema": {
    "device": "int(default=0)",  # Default SDR device index
    "gain": "int(default=0)",  # Auto gain if 0
    "frequency": "str(default='433.92M')",  # Default frequency in MHz
    "frequency_hop": ["str"],  # Allow multiple frequencies
    "hop_interval": "int(default=60)",  # Default hop interval (seconds)
    "sample_rate": "str(default='1024k')",  # Default sample rate
    "convert_si": "bool(default=true)",  # Convert to SI units
    "protocols": ["int"],  # List of protocols to enable
    "pulse_detect": {
      "auto_level": "bool(default=true)"  # Auto pulse detection
    },
    "mqtt": {
      "host": "str(default='192.168.1.9')",  # MQTT broker IP
      "port": "port(default=1883)",  # MQTT port
      "user": "str(default='mqtt')",  # MQTT user
      "password": "password",  # MQTT password (no default for security)
      "retain": "bool(default=true)",  # Retain MQTT messages
      "topic_prefix": "str(default='rtl_433/9b13b3f4-rtl433')"  # Topic prefix
    },
    "output": {
      "json_file": "str(default='/config/rtl_433/logs/output.json')",  # Default log location
      "kv": "bool(default=true)"  # Enable key-value output
    },
    "log_level": "int(default=6, min=1, max=8)",  # Log level range 1-8
    "report_meta": "bool(default=true)",  # Report metadata
    "report_protocol": "bool(default=true)"  # Report detected protocol
  }
}
